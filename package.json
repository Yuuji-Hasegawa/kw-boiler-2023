{
  "name": "kw-boiler-2023",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build && prettier --write dist/**/*.html",
    "preview": "vite preview",
    "prepare": "simple-git-hooks",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"src/**/*.js\"",
    "lint:prettier": "prettier --check src",
    "lint:stylelint": "stylelint \"src/**/*.{css,scss}\"",
    "fix": "run-p fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "prettier --write src",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "icon:gen": "node imagemin-script/icon.mjs",
    "icon:clean": "rimraf src/public/icons/icon-*.png",
    "icon": "run-s icon:clean icon:gen",
    "image": "run-s image:clean image:opt image:gen",
    "image:opt": "node imagemin-script/opt.mjs",
    "image:gen": "node imagemin-script/gen.mjs",
    "image:clean": "rimraf src/public/img"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "css-declaration-sorter": "^6.3.1",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-css-import-order": "^1.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fs": "0.0.1-security",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "lint-staged": "^13.1.1",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "postcss": "^8.4.21",
    "postcss-preset-env": "^8.0.1",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "sass": "^1.58.0",
    "sharp": "^0.31.3",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.0.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-standard-scss": "^7.0.0",
    "terser": "^5.16.3",
    "vite": "^4.1.1"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix --quiet"
    ],
    "**/*.{css,scss}": [
      "stylelint --fix --quiet"
    ],
    "**/*.{html,json,jsonc}": [
      "prettier --write --loglevel=error"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "dependencies": {
    "remove": "^0.1.5"
  }
}
